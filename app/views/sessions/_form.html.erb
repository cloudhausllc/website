<%= form_for(:session, url: login_path) do |f| %>
    <div class="row">
      <div class="box">
        <div class="col-md-4 col-md-offset-4">
          <div class="field">
            <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
          </div>
          <div class="field">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
          </div>
          <%# TODO: Remember me %>
          <div class="actions">
            <div class="field">
              <%= f.submit 'Login', class: 'form-control' %>
            </div>
            <div class="field">
              <%= link_to 'New User? Register', new_user_path, class: 'form-control', style: 'text-align: center;' %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>